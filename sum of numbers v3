using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int border = 101;
            int number = random.Next(1, border);
            int count = 0;
            int sumNumbers = 0;
            int divisor1 = 3;
            int divisor2 = 5;
            Console.WriteLine(number);

            for (int i = number; i >= count; count++)
            {
                if ((count % divisor1 == 0) || (count % divisor2 == 0))
                {
                    sumNumbers += count;
                    Console.WriteLine(count);
                }
            }

            Console.WriteLine(sumNumbers);
            Console.ReadKey();
        }
    }
}
