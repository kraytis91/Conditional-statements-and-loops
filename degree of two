using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            const int number2 = 2;

            Random random = new Random();
            int maxBorder = 46340;
            int minBorder = 1;
            int number = random.Next(minBorder, maxBorder);
            int multiplier = 2;
            int degree = 1;

            while (number > multiplier)
            {
                multiplier *= number2;
                degree++;
            }

            Console.WriteLine($" {number} - число. Минимальная степпень 2ки превосходящая число - {degree}, {number2}^{degree}={multiplier} ");
            Console.ReadKey();
        }
    }
}
