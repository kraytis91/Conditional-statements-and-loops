using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            string message;
            int iterationMessageCount;
            int cycleCount = 0;

            Console.Write("Введите ваше сообщение: ");
            message = Console.ReadLine();
            Console.Write("Введите количество сообщений: ");
            iterationMessageCount = Convert.ToInt32(Console.ReadLine());

            while(cycleCount < iterationMessageCount)
            {
                Console.WriteLine(message);
                cycleCount += 1;
            }
            Console.ReadKey();
        }
    }
}
