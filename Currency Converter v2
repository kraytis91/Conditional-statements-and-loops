using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            float rub;
            float usd;
            float euro;
            float exchangeRateRubToEuro = 76.97f;
            float exchangeRateRubToUsd = 72.88f;
            float exchangeRateEuroToUsd = 0.95f;
            float exchangeRateEuroToRub = 0.013f;
            float exchangeRateUsdToRub = 0.014f;
            float exchangeRateUsdToEuro = 1.05f;
            string userInputCommand = "";
            float currencyCount;
            const string commandExit = "exit";
            const string commandContinue = "continue";
            const string commandRubToEuro = "RubToEuro";
            const string commandRubToUsd = "RubToUsd";
            const string commandEuroToUsd = "EuroToUsd";
            const string commandEuroToRub = "EuroToRub";
            const string commandUsdToRub = "UsdToRub";
            const string commandUsdToEuro = "UsdToEuro";

            Console.Write("Введите баланс рублей: ");
            rub = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс долларов: ");
            usd = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс евро: ");
            euro = Convert.ToSingle(Console.ReadLine());

            while (userInputCommand != commandExit)
            {
                Console.WriteLine("\"RubToUsd\" - обменять рубли на доллары");
                Console.WriteLine("\"UsdToRub\" - обменять доллары на на рубли");
                Console.WriteLine("\"EuroToUsd\" - обменять евро на доллары");
                Console.WriteLine("\"UsdToEuro\" - обменять доллары на на евро");
                Console.WriteLine("\"RubToEuro\" - обменять рубли на евро");
                Console.WriteLine("\"EuroToRub\" - обменять евро на на рубли");
                userInputCommand = Console.ReadLine();

                switch (userInputCommand)
                {
                    case commandRubToUsd:
                        Console.WriteLine("Обмен рублей на доллары");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        
                        if (rub >= currencyCount)
                        {
                            rub -= currencyCount;
                            usd += currencyCount / exchangeRateRubToUsd;
                        }
                        
                        else
                        {
                            Console.WriteLine("Недопустимое количество рублей");
                        }
                        break;

                    case commandUsdToRub:
                        Console.WriteLine("Обмен долларов на рубли");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        
                        if (usd >= currencyCount)
                        {
                            usd -= currencyCount;
                            rub += currencyCount / exchangeRateUsdToRub;
                        }
                        
                        else
                        {
                            Console.WriteLine("Недопустимое количество долларов");
                        }
                        break;

                    case commandEuroToUsd:
                        Console.WriteLine("Обмен евро на доллары");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                       
                        if (euro >= currencyCount)
                        {
                            euro -= currencyCount;
                            usd += currencyCount / exchangeRateEuroToUsd;
                        }
                       
                        else
                        {
                            Console.WriteLine("Недопустимое количество евро");
                        }
                        break;

                    case commandUsdToEuro:
                        Console.WriteLine("Обмен доллары на евро");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        
                        if (usd >= currencyCount)
                        {
                            usd -= currencyCount;
                            euro += currencyCount / exchangeRateUsdToEuro;
                        }
                       
                        else
                        {
                            Console.WriteLine("Недопустимое количество долларов");
                        }
                        break;

                    case commandRubToEuro:
                        Console.WriteLine("Обмен рубли на евро");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        
                        if (rub >= currencyCount)
                        {
                            rub -= currencyCount;
                            euro += currencyCount / exchangeRateRubToEuro;
                        }
                        
                        else
                        {
                            Console.WriteLine("Недопустимое количество долларов");
                        }
                        break;

                    case commandEuroToRub:
                        Console.WriteLine("Обмен евро на рубли");
                        Console.Write("Сколько вы хотите обменять?");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        
                        if (euro >= currencyCount)
                        {
                            euro -= currencyCount;
                            rub += currencyCount / exchangeRateEuroToRub;
                        }
                       
                        else
                        {
                            Console.WriteLine("Недопустимое количество евро");
                        }
                        break;
                }
                
                Console.WriteLine($"Ваш баланс: {rub} рублей, {usd} долларов, {euro} евро");
                Console.WriteLine("Для завершения работы программы введите \"exit\", для продолжения работы введите \"continue\"");
                userInputCommand = Console.ReadLine();
                
                switch (userInputCommand)
                {
                    case commandExit:
                        Console.WriteLine("Выход из программы");
                        Console.ReadKey();
                        break;

                    case commandContinue:
                        Console.WriteLine("Продолжение работы программы");
                        break;
                }
            }
        }
    }
}
